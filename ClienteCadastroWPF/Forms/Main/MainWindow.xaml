<Window x:Class="ClienteCadastroWPF.Forms.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Menu Principal" Height="450" Width="800"
        Icon="/Imagens/icon.ico">

    <Grid x:Name="Menu_Principal" Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="Auto" MinWidth="0"/>
        </Grid.ColumnDefinitions>

        <Grid Margin="71,107,71,107">
            <Image Source="/Imagens/clientes.png"/>
        </Grid>

        <Grid Grid.Column="2" Margin="0,0,-400,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="218" />
                <RowDefinition Height="Auto" MinHeight="7"/>
            </Grid.RowDefinitions>

            <Button x:Name="btnClientes" Content="Clientes" Margin="91,142,91,20" FontSize="24" FontFamily="Impact" Click="btnClientes_Click"/>
            <Button x:Name="btnIntegracao" Content="Integracão" Margin="91,22,91,-69" FontSize="24" FontFamily="Impact" Grid.Row="1" Click="btnIntegracao_Click"/>
        </Grid>
    </Grid>
</Window>
